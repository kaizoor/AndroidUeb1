<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.kaischultz.uebung1.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <EditText
                android:id="@+id/CalcOut"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:background="@color/primary_dark_material_dark_1"
                android:ems="10"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:inputType="none"
                android:textAlignment="viewEnd"
                android:textIsSelectable="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text=""
                android:textAlignment="viewEnd"
                android:textColor="@color/accent_material_dark_1"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="142dp">

            <Button
                android:id="@+id/seven"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="7"
                android:textSize="25sp" />

            <Button
                android:id="@+id/eight"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="8"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nine"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="9"
                android:textSize="25sp" />

            <Button
                android:id="@+id/subtract"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="-"
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="233dp">

            <Button
                android:id="@+id/four"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="4"
                android:textSize="25sp" />

            <Button
                android:id="@+id/five"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="5"
                android:textSize="25sp" />

            <Button
                android:id="@+id/six"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="6"
                android:textSize="25sp" />

            <Button
                android:id="@+id/sum"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="+"
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/two"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="2"
                android:textSize="25sp" />

            <Button
                android:id="@+id/three"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="3"
                android:textSize="25sp" />

            <Button
                android:id="@+id/divide"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="/"
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/komma"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="."
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/zero"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_dark_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="0"
                android:textSize="25sp" />

            <Button
                android:id="@+id/del"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClickReturn"
                android:text="CE"
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />

            <Button
                android:id="@+id/multiply"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/accent_material_dark_1"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:onClick="btnOnClick"
                android:text="*"
                android:textColor="@color/primary_dark_material_dark_1"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
